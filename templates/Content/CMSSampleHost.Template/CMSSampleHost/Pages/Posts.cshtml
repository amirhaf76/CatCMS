@page
@model PostsModel
@{
    ViewData["Title"] = "Posts";
}
<section class="section">
    <div class="container">
        <h2 class="title is-3 has-text-centered">All Posts</h2>
        <div class="container columns is-multiline is-2">
            @foreach (var post in Model.Posts)
            {
                <div class="column is-one-third">
                    <div class="card">
                        <div class="card-image">
                            <figure class="image is-4by3">
                                <img src="@post.ImageUrl" alt="@post.Title" />
                            </figure>
                        </div>
                        <div class="card-content">
                            <p class="title is-4">@post.Title</p>
                            <p class="subtitle is-6">@post.Date</p>
                            <div class="content">@post.Excerpt</div>
                            <a asp-page="/Post" asp-route-id="@post.Id" class="button is-link is-light mt-3">Read More</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
