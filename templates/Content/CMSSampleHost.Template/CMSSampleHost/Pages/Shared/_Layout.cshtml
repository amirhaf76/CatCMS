<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyCMS</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
    <link rel="stylesheet" href="~/css/styles.css" />
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar is-light" role="navigation" aria-label="main navigation">
        <div class="navbar-brand">
            <a class="navbar-item" href="/"> <strong>MyCMS</strong> </a>
            <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navbarBasic">
                <span aria-hidden="true"></span><span aria-hidden="true"></span><span aria-hidden="true"></span>
            </a>
        </div>

        <div id="navbarBasic" class="navbar-menu">
            <div class="navbar-start">
                <a class="navbar-item" asp-page="/Index">Home</a>
                <a class="navbar-item" asp-page="/Posts">Posts</a>
                <a class="navbar-item" asp-page="/About">About</a>
                <a class="navbar-item" asp-page="/Contact">Contact</a>
            </div>

            <div class="navbar-end">
                <div class="navbar-item">
                    <div class="buttons">
                        <a class="button is-light" asp-page="/Signup">Sign Up</a>
                        <a class="button is-link" asp-page="/Login">Login</a>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <main>
        @RenderBody()
    </main>

    <footer class="footer">
        <div class="content has-text-centered">
            <p>&copy; @DateTime.Now.Year CMS Sample Host. All rights reserved.</p>
        </div>
    </footer>

    <script src="~/js/main.js"></script>
</body>
</html>
