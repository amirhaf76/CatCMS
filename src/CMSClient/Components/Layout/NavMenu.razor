@using CMSClient.Components.Logics
@using Microsoft.AspNetCore.Components.WebAssembly.Hosting

@inject IWebAssemblyHostEnvironment HostEnvironment

<MudNavMenu>
    <MudNavLink Href=@(CMSRoutes.HOME) Match="NavLinkMatch.All">Dashboard</MudNavLink>
    <MudNavLink Href=@(CMSRoutes.HOSTS) Match="NavLinkMatch.Prefix">hosts</MudNavLink>
    <MudNavLink Href=@(CMSRoutes.EDITOR) Match="NavLinkMatch.Prefix">Editor</MudNavLink>
    @if (HostEnvironment.IsDevelopment())
    {
        <MudNavGroup Title="DevelopmentSet" Expanded="true">
            <MudNavLink Href=@(CMSRoutes.DEVELOPMENT) Match="NavLinkMatch.Prefix">Development</MudNavLink>
            <MudNavLink Href=@(CMSRoutes.REGISTER) Match="NavLinkMatch.Prefix">Register</MudNavLink>
            <MudNavLink Href=@(CMSRoutes.LOGIN) Match="NavLinkMatch.Prefix">Login</MudNavLink>
        </MudNavGroup>
    }
    <MudNavLink Href="/about" Match="NavLinkMatch.Prefix">About</MudNavLink>
</MudNavMenu>